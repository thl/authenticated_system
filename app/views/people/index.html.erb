<h1><%= ts 'list.ing.records', :what => Person.model_name.human(:count => :many).titleize %></h1>
<table border="1" class="normal">
  <tr>
    <th><%= Person.human_attribute_name(:fullname).s %></th>
    <th><%= User.human_attribute_name(:login).s %></th>
    <th><%= Role.model_name.human(:count => :many).titleize.s %></th>
  </tr>
<% can_edit = authorized? hash_for_edit_person_path
   for person in @people %>
  <tr>
    <td>
<%  if can_edit %>
<%=   link_to h(person.fullname).s, edit_person_path(person) %>
<%  else %>
<%=   link_to h(person.fullname).s, person_path(person) %>
<%  end %>
	</td>
<%  user = person.user
    if !user.nil? %>
      <td>
<%	  if authorized? hash_for_edit_person_user_path %>
<%=     link_to(h(user.login), edit_person_user_path(person)) %>
<%    else %>
<%=     link_to(h(user.login), person_user_path(person)) %>
<%    end %></td>
      <td><%= user.roles.collect{|r| authorized?(hash_for_role_path) ? link_to(h(r.title), role_path(r)) : r.title }.join(', ') %></td>
<%  else %>
      <td colspan="2"><%= link_to ts('new.record', :what => User.model_name.human), new_person_user_path(person) %></td>
<%  end %>
  </tr>
<% end %>
</table>
<p>&nbsp;<br/>
<% if authorized? hash_for_new_person_path %>
<%=  link_to ts('new.record', :what => Person.model_name.human), new_person_path %> |
<% end %>
<%= link_to ts('back.to', :what => t('home.this')), root_path %>
</p>