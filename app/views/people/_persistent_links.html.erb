<%=   link_to ts('delete.this'), person_path(@person), :confirm => te('delete.confirmation'), :method => :delete %> |
<%  end %>
<%= link_to ts('back.to', :what => t('all.records', :what => Person.human_name(:count => :many))), people_path %> |
