<h1><%= ts 'list.ing.records', :what => AuthenticatedSystem::Permission.model_name.human(:count => :many).titleize %></h1>
<table border="1" class="normal">
  <tr>
    <th><%= AuthenticatedSystem::Permission.human_attribute_name(:title).s %></th>
    <th><%= AuthenticatedSystem::Permission.human_attribute_name(:description).s %></th>
  </tr>
<% for permission in @permissions %>
  <tr>
    <td><%= link_to h(permission.title).s, authenticated_system_permission_path(permission) %></td>
    <td><%=h permission.description %></td>
  </tr>
<% end %>
</table>
<p>
<%= link_to ts('new.record', :what => AuthenticatedSystem::Permission.model_name.human), new_authenticated_system_permission_path %>
</p>